<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:label">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/wallet_dim_foreground_holo_dark</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="CustomToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/background</item>
    </style>

    <style name="CustomSearctActivityToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>

    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
